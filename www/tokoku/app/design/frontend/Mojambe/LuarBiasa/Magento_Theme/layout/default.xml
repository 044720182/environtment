<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo" remove="true"/>
        <referenceBlock name="header.panel.wrapper" remove="true"/>
        <referenceBlock name="top.search" remove="true"/>
        <referenceBlock name="minicart" remove="true"/>
        <referenceBlock name="store.menu" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        
        
        <referenceContainer name="header-wrapper">
            <block class="Mojambe\Blog\Block\Html\Header\Logo" 
                name="logo.mojambe">
                    <arguments>
                        <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                        <argument name="logo_img_width" xsi:type="number">300</argument>
                        <argument name="logo_img_height" xsi:type="number">300</argument>
                    </arguments>
            </block>

            <block class="Magento\Theme\Block\Html\Topmenu" name="catalog.topnav.mojambe" template="Mojambe_Blog::html/topmenu.phtml"/>

        </referenceContainer>

        <!-- <referenceContainer name="columns.top">
            <block class="Mojambe\Blog\Block\Html\MainImage" name="page.main.title" template="Mojambe_Blog::html/mainimage.phtml"/>
        </referenceContainer> -->

        <referenceContainer name="page.bottom.container">
            <block class="Mojambe\Blog\Block\Html\Footer"
                name="mojambe.footer.toper"
                template="Mojambe_Blog::html/footer/viewmore.phtml" />
        </referenceContainer>

        <referenceContainer name="footer">

            <block class="Mojambe\Blog\Block\Html\Footer"
                name="mojambe.footer.top"
                template="Mojambe_Blog::html/footer/footertop.phtml" />

            <block class="Mojambe\Blog\Block\Html\Footer"
                name="mojambe.footer.copyright"
                template="Mojambe_Blog::html/footer/copyright.phtml" />

            <block class="Mojambe\Blog\Block\Html\Footer"
                name="mojambe.footer.custom"
                template="Mojambe_Blog::html/footer/footer.phtml" />

            <block class="Mojambe\Blog\Block\Html\Footer"
                name="mojambe.follows.custom"
                template="Mojambe_Blog::html/footer/followme.phtml" />

            <block class="Mojambe\Blog\Block\Html\Footer"
                name="mojambe.footer_links.custom"
                template="Mojambe_Blog::html/footer/footer_links.phtml" />

            
        </referenceContainer>
    </body>
</page>