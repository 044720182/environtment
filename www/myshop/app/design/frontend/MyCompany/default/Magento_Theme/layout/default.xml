<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">200</argument> 
                <argument name="logo_img_height" xsi:type="number">150</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="header-wrapper">
            <block class="Toptal\Blog\Block\NavTop"
                name="navtop.custom"
                template="Toptal_Blog::navtop.phtml" />
        </referenceContainer>

        <referenceBlock name="catalog.topnav" remove="true"/>

        <referenceBlock name="top.search" remove="true" />
        <referenceBlock name="minicart" remove="true" />
        <referenceBlock name="form.subscribe" remove="true" />

        <referenceContainer name="content">
            <block class="Toptal\Blog\Block\NavTop"
                name="footer.top"
                template="Toptal_Blog::footer_top.phtml" />
        </referenceContainer>
        
        <referenceContainer name="footer">
            <block class="Toptal\Blog\Block\NavTop"
                name="footer.copyright"
                template="Toptal_Blog::copyright.phtml" />

            <block class="Toptal\Blog\Block\NavTop"
                name="footer.custom"
                template="Toptal_Blog::footer.phtml" />

            <block class="Toptal\Blog\Block\NavTop"
                name="footer_links.custom"
                template="Toptal_Blog::footer_links.phtml" />
        </referenceContainer>

        <referenceBlock name="footer_links" remove="true"/>
   

    </body>
</page>